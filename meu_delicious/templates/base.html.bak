        <li><a href="/login/">Login</a></li>
        {% else %}

        <li><a href="/logout/">Logout</a></li>
        {% endif %}
      </ul>
      {% endblock menu %}
    </div>

    {% block conteudo %}
    {% endblock conteudo %}
  </body>
</html>
