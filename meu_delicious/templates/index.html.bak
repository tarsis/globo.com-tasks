{% extends "base.html" %}

{% block conteudo %}
<div class="lista" id="favoritos">
  <h2>Favorios Recentes</h2>
  <ul>
    {% for favorito in favoritos %}
    <li>
      <a href="{{ favorito.url }}">{{ favorito }}</a>
    </li>
    {% empty %}
      <li>Ainda não há favoritos cadastrados, <a href="/accounts/register/">clique aqui</a> para ser o primeiro</li>
    {% endfor %}
  </ul>
</div>
{% endblock conteudo %}
