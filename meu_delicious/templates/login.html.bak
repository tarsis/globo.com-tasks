{% extends "base.html" %}
{% block title %}Login{% endblock %}
{% block conteudo %}

  {% if form.errors %}
    <p>Usuario e senha estao errados. Por favor, tente de novo!</p>
  {% endif %}

  <form method="post" action="{% url django.contrib.auth.views.login %}">{% csrf_token %}
    <table>
    <tr>
        <td>{{ form.username.label_tag }}</td>
        <td>{{ form.username }}</td>
    </tr>
    <tr>
        <td>{{ form.password.label_tag }}</td>
        <td>{{ form.password }}</td>
    </tr>
    </table>
    <p><a href="{% url auth_password_reset %}">Esqueceu sua Senha?</a> <a href="{% url registration_register %}">Clique aqui</a> para criar sua conta</p>

    <input type="submit" value="Login" />
  </form>

{% endblock %}
